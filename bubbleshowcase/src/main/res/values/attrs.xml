<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PlayFairDisplayTextView">
        <attr name="textfont" format="string"/>
    </declare-styleable>

    <declare-styleable name="ShowCaseMessageView">
        <attr name="iconImage" format="reference" />
        <attr name="iconClose" format="reference" />
        <attr name="title" format="string" />
        <attr name="text" format="string" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/averta_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/averta_semibold</item>
    </style>

    <style name="TextDesc">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/averta</item>
    </style>
</resources>